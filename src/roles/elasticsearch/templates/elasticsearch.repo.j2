[elasticsearch]
name=Elasticsearch repository for {{elasticsearch_major_version}} packages
baseurl=https://artifacts.elastic.co/packages/{{elasticsearch_major_version}}/yum
gpgcheck=1
gpgkey=https://artifacts.elastic.co/GPG-KEY-elasticsearch
enabled=0

{% if elasticsearch_proxy_host is defined and elasticsearch_proxy_port is defined %}
proxy=http://{{ elasticsearch_proxy_host }}:{{elasticsearch_proxy_port}}
{% endif %}

autorefresh=1
type=rpm-md